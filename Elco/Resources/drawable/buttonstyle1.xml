<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Default state -->
	<item android:state_pressed="false">
		<layer-list>
			<item>
				<shape>
					<corners android:radius="10dp" />
				</shape>
			</item>

			<item>
				<shape>
					<corners android:radius="10dp" />
					<gradient android:angle="270" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimary" />
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- Pressed state -->
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape>
					<corners android:radius="10dp" />
				</shape>
			</item>

			<item>
				<shape>
					<corners android:radius="10dp" />
					<gradient android:angle="270" android:endColor="#bababa" android:startColor="@color/colorPrimary" />
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
